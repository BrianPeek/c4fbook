<Window x:Class="InnerTube.Progress"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Progress" Height="300" Width="451"
    WindowStartupLocation="CenterOwner"    
    ShowInTaskbar="True"
    Background="{DynamicResource SilverGradient}" Icon="/InnerTube;component/images/innertube_icon_sml.png">
    <Grid>
        <StackPanel>
            <StackPanel HorizontalAlignment="Center" Margin="10" Name="stackPanel1" Orientation="Horizontal" Height="50" VerticalAlignment="Top">
                <Button Name="btnDownload" Margin="10"  Click="button1_Click" Width="100">Start Download</Button>           
                <ProgressBar Height="20" Margin="10" Name="progressBar1" Width="100" Visibility="Hidden" />
            </StackPanel>
            <Label HorizontalAlignment="Center">NOTE: Downloads can take over an hour, please be patient!</Label>
            <ListBox Name="StatusList" Height="150"></ListBox>
        </StackPanel>
    </Grid>
</Window>
