<Window x:Class="PeerCast.ChooseMode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Choose Your Mode" Height="400" Width="500" MinWidth="500" MinHeight="400" Icon="/PeerCast;component/icon.png" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Background="{DynamicResource SilverGradient}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <Label Grid.ColumnSpan="2" HorizontalAlignment="Center" FontSize="36">
        	<Label.Foreground>
        		<SolidColorBrush Color="{DynamicResource Orange}"/>
        	</Label.Foreground>Choose a mode</Label>
        <Button Grid.Column="0" Margin="20,75" Height="150" Name="Server" FontSize="48" FontWeight="Bold" Click="SetMode">Server</Button>
        <Button Grid.Column="1" Margin="20,75" Height="150" Name="Client" FontSize="48" FontWeight="Bold" Click="SetMode">Client</Button>
    </Grid>
</Window>
